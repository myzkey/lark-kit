{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@lark-kit/core": ["packages/core/src/index.ts"],
      "@lark-kit/shared": ["packages/shared/src/index.ts"],
      "@lark-kit/bitable": ["packages/bitable/src/index.ts"],
      "@lark-kit/chat": ["packages/chat/src/index.ts"],
      "@lark-kit/contact": ["packages/contact/src/index.ts"],
      "@lark-kit/drive": ["packages/drive/src/index.ts"],
      "@lark-kit/webhook": ["packages/webhook/src/index.ts"],
      "lark-kit": ["packages/lark-kit/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "examples"]
}
